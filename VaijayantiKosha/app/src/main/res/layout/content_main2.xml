<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/Title"
        android:layout_width="213dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:text="@string/heading"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Intro"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="left"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="@string/intro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <TextView
        android:id="@+id/inputEncodingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Input Encoding:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Intro" />

    <TextView
        android:id="@+id/inputEncode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FAE9C0"
        android:clickable="true"
        android:enabled="true"
        android:hint="Select Input type"
        android:inputType="none"
        android:onClick="input_clicked"
        android:text="Unicode-Devanagari"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/inputEncodingLabel"
        app:layout_constraintStart_toStartOf="@+id/ppadam"
        app:layout_constraintTop_toTopOf="@+id/inputEncodingLabel" />

    <TextView
        android:id="@+id/padamLabel"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Pratipadikam"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEncodingLabel" />

    <EditText
        android:id="@+id/ppadam"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FAE9C1"
        android:focusedByDefault="true"
        android:inputType="textPersonName"
        android:text="गो"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/padamLabel"
        app:layout_constraintStart_toStartOf="@+id/relation_edit"
        app:layout_constraintTop_toTopOf="@+id/padamLabel" />


    <TextView
        android:id="@+id/relationLabel"
        android:layout_width="133dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="Relation"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/padamLabel" />

    <TextView
        android:id="@+id/relation_edit"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:background="#FAE9C0"
        android:clickable="true"
        android:hint="Select a Realtion"
        android:onClick="rel_clicked"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/relationLabel"
        app:layout_constraintStart_toStartOf="@+id/outputEncode"
        app:layout_constraintTop_toTopOf="@+id/relationLabel" />

    <TextView
        android:id="@+id/outputEncodeLabel"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:enabled="true"
        android:text="Output Encoding:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relationLabel" />


    <TextView
        android:id="@+id/outputEncode"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="#FAE9C0"
        android:clickable="true"
        android:enabled="true"
        android:hint="Select Output Encoding"
        android:inputType="textPersonName"
        android:onClick="output_clicked"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/outputEncodeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/outputEncodeLabel" />


    <Button
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginBottom="120dp"
        android:onClick="submit_click"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>